<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="package1.Products" table="Products" schema="public" catalog="OnlineStore">
        <id name="id">
            <column name="id" sql-type="integer"/>
            <generator class="increment"></generator>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="author">
            <column name="author" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="year">
            <column name="year" sql-type="integer" not-null="true"/>
        </property>
        <property name="publishingHouse">
            <column name="publishing_house" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="integer" not-null="true"/>
        </property>
        <property name="quantityInStock">
            <column name="quantity_in_stock" sql-type="integer" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>